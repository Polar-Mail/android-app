<resources>

    <!-- Toolbar -->
    <style name="AppTheme.MutedToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?colorSurface</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppTheme.ColoredToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">

    </style>

    <!-- Tabs -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Button</item>
        <item name="tabIndicator">@drawable/tab_indicator_rounded</item>
    </style>

    <!-- Auth -->
    <style name="Auth_Title">
        <item name="android:textAppearance">@style/TextAppearance.Headline4</item>
    </style>

    <style name="Auth_Description">
        <item name="android:textAppearance">@style/TextAppearance.Subtitle1</item>
    </style>

    <style name="TextAppearance.AppCompat.EmailProvider.Title" parent="TextAppearance.MaterialComponents.Body1">
    </style>

    <!-- Home -->
    <style name="AppTheme.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">26dp</item>
    </style>

    <!-- Account selector -->
    <style name="TextAppearance.AppTheme.AccountSelector.Account.Title" parent="TextAppearance.Body1">

    </style>

    <style name="TextAppearance.AppTheme.AccountSelector.Add.Title" parent="TextAppearance.Subtitle2">

    </style>

</resources>

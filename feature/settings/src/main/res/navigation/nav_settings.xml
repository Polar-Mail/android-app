<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_settings"
    app:startDestination="@id/settingsFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="app.polarmail.settings.SettingsFragment"
        android:label="@string/settings_title" >
        <action
            android:id="@+id/action_settingsFragment_to_accountSettingsFragment"
            app:destination="@id/accountSettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountSettingsFragment"
        android:name="app.polarmail.settings.accounts.AccountSettingsFragment"
        android:label="@string/settings_accounts_title"
        tools:layout="@layout/fragment_settings_accounts">
        <action
            android:id="@+id/action_accountSettingsFragment_to_accountDetailSettingsFragment"
            app:destination="@id/accountDetailSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountDetailSettingsFragment"
        android:name="app.polarmail.settings.accounts.detail.AccountDetailSettingsFragment"
        android:label="" >
        <argument
            android:name="account_id"
            app:argType="long" />
    </fragment>

</navigation>